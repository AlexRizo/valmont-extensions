<header
  class="fixed top-0 left-0 w-full z-50 bg-white/95 shadow-sm transition-all duration-300 py-4"
>
  <div class="container mx-auto px-5 flex justify-between items-center">
    <!-- Logo -->
    <div class="font-serif text-2xl font-bold tracking-wide text-black">
      ValMont <span class="text-[#D4AF37]">Extensions</span>
    </div>

    <!-- Botón Móvil -->
    <div class="md:hidden text-2xl cursor-pointer" id="mobile-toggle">
      <i class="fas fa-bars"></i>
    </div>

    <!-- Navegación -->
    <nav>
      <ul
        class="fixed md:static top-[60px] left-0 w-full md:w-auto bg-white md:bg-transparent flex flex-col md:flex-row items-center gap-8 py-8 md:py-0 shadow-lg md:shadow-none transition-all duration-300 -translate-y-[150%] md:translate-y-0 -z-10 md:z-auto"
        id="nav-links"
      >
        <li>
          <a
            href="#hero"
            class="text-sm font-medium uppercase tracking-widest hover:text-[#D4AF37] transition-colors nav-link"
            >Inicio</a>
        </li>
        <li>
          <a
            href="#extensiones"
            class="text-sm font-medium uppercase tracking-widest hover:text-[#D4AF37] transition-colors nav-link"
            >Cabello</a>
        </li>
        <li>
          <a
            href="#unas"
            class="text-sm font-medium uppercase tracking-widest hover:text-[#D4AF37] transition-colors nav-link"
            >Nail Bar</a>
        </li>
        <li>
          <a
            href="#contacto"
            class="text-sm font-medium uppercase tracking-widest hover:text-[#D4AF37] transition-colors nav-link"
            >Contacto</a>
        </li>
        <li>
          <a
            href="#contacto"
            class="text-sm font-bold uppercase tracking-widest text-[#D4AF37] nav-link"
            >Reservar</a>
        </li>
      </ul>
    </nav>
  </div>
</header>

<script>
  const toggleBtn = document.getElementById("mobile-toggle");
  const navLinks = document.getElementById("nav-links");
  const links = document.querySelectorAll(".nav-link");

  if (toggleBtn && navLinks) {
    toggleBtn.addEventListener("click", () => {
      // Alternar clases para mostrar/ocultar menú móvil
      if (navLinks.classList.contains("-translate-y-[150%]")) {
        navLinks.classList.remove("-translate-y-[150%]");
        navLinks.classList.add("translate-y-0");
      } else {
        navLinks.classList.add("-translate-y-[150%]");
        navLinks.classList.remove("translate-y-0");
      }
    });

    links.forEach((link) => {
      link.addEventListener("click", () => {
        navLinks.classList.add("-translate-y-[150%]");
        navLinks.classList.remove("translate-y-0");
      });
    });
  }
</script>
