---
import "@/styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="ValMont Extensions - Especialistas en cabello y uÃ±as"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <!-- Fuentes Google -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600&family=Playfair+Display:ital,wght@0,400;0,600;0,700;1,400&display=swap"
      rel="stylesheet"
    />
    <!-- Iconos -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/js/all.min.js"
    ></script>
    <title>{title}</title>
  </head>
  <body class="font-sans text-[#0a0a0a] antialiased bg-white">
    <slot />
  </body>
</html>

<style is:global>
  /* Definimos las familias de fuentes para usarlas con font-['Nombre'] o extendiendo el theme */
  :root {
    --font-sans: "Montserrat", sans-serif;
    --font-serif: "Playfair Display", serif;
  }
  body {
    font-family: var(--font-sans);
  }
  h1,
  h2,
  h3,
  h4,
  .font-serif {
    font-family: var(--font-serif);
  }
</style>
