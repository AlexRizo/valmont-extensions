<section id="precios" class="py-24 bg-white">
  <div class="container mx-auto px-5">
    <!-- Header Sección -->
    <div class="text-center mb-16">
      <h2
        class="font-serif text-4xl md:text-5xl mb-4 relative inline-block text-[#0a0a0a] after:content-[''] after:block after:w-16 after:h-[2px] after:bg-[#D4AF37] after:mx-auto after:mt-4"
      >
        Catálogo de Precios
      </h2>
      <p class="text-[#555555] max-w-xl mx-auto mt-4 italic">
        Cabello 100% virgen, grueso de raíz a punta y sin químicos.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 max-w-5xl mx-auto">
      <!-- Tabla 1: Cabello Virgen -->
      <div
        class="bg-[#f8f8f8] border border-gray-100 shadow-sm hover:shadow-lg transition-shadow duration-300"
      >
        <div class="bg-[#0a0a0a] text-white py-6 text-center">
          <h3 class="font-serif text-2xl tracking-wide text-[#D4AF37]">
            Cabello 100% Virgen
          </h3>
          <p class="text-xs uppercase tracking-widest mt-1 text-gray-400">
            Sin Procesar
          </p>
        </div>
        <div class="p-8">
          <table class="w-full text-left border-collapse">
            <thead>
              <tr>
                <th
                  class="pb-4 border-b border-gray-200 text-sm font-bold text-gray-500 uppercase tracking-wider"
                  >Largo</th
                >
                <th
                  class="pb-4 border-b border-gray-200 text-sm font-bold text-gray-500 uppercase tracking-wider text-right"
                  >Precio por Gramo</th
                >
              </tr>
            </thead>
            <tbody class="text-[#0a0a0a]">
              <tr class="group">
                <td
                  class="py-4 border-b border-gray-100 group-hover:text-[#D4AF37] transition-colors"
                  >65 – 70 cm</td
                >
                <td
                  class="py-4 border-b border-gray-100 text-right font-serif text-lg font-bold"
                  >$65</td
                >
              </tr>
              <tr class="group">
                <td
                  class="py-4 border-b border-gray-100 group-hover:text-[#D4AF37] transition-colors"
                  >55 – 60 cm</td
                >
                <td
                  class="py-4 border-b border-gray-100 text-right font-serif text-lg font-bold"
                  >$50</td
                >
              </tr>
              <tr class="group">
                <td class="py-4 group-hover:text-[#D4AF37] transition-colors"
                  >45 – 50 cm</td
                >
                <td class="py-4 text-right font-serif text-lg font-bold">$45</td
                >
              </tr>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Tabla 2: Cabello Teñido -->
      <div
        class="bg-[#f8f8f8] border border-gray-100 shadow-sm hover:shadow-lg transition-shadow duration-300"
      >
        <div class="bg-[#0a0a0a] text-white py-6 text-center">
          <h3 class="font-serif text-2xl tracking-wide text-[#D4AF37]">
            Cabello Teñido
          </h3>
          <p class="text-xs uppercase tracking-widest mt-1 text-gray-400">
            Procesado / Color
          </p>
        </div>
        <div class="p-8">
          <table class="w-full text-left border-collapse">
            <thead>
              <tr>
                <th
                  class="pb-4 border-b border-gray-200 text-sm font-bold text-gray-500 uppercase tracking-wider"
                  >Largo</th
                >
                <th
                  class="pb-4 border-b border-gray-200 text-sm font-bold text-gray-500 uppercase tracking-wider text-right"
                  >Precio por Gramo</th
                >
              </tr>
            </thead>
            <tbody class="text-[#0a0a0a]">
              <tr class="group">
                <td
                  class="py-4 border-b border-gray-100 group-hover:text-[#D4AF37] transition-colors"
                  >65 – 70 cm</td
                >
                <td
                  class="py-4 border-b border-gray-100 text-right font-serif text-lg font-bold"
                  >$55</td
                >
              </tr>
              <tr class="group">
                <td
                  class="py-4 border-b border-gray-100 group-hover:text-[#D4AF37] transition-colors"
                  >55 – 60 cm</td
                >
                <td
                  class="py-4 border-b border-gray-100 text-right font-serif text-lg font-bold"
                  >$45</td
                >
              </tr>
              <tr class="group">
                <td class="py-4 group-hover:text-[#D4AF37] transition-colors"
                  >45 – 50 cm</td
                >
                <td class="py-4 text-right font-serif text-lg font-bold">$40</td
                >
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <div class="text-center mt-12">
      <a
        href="#contacto"
        class="inline-block py-3 px-10 text-sm font-semibold tracking-[2px] uppercase bg-[#D4AF37] text-white hover:bg-black hover:text-[#D4AF37] transition-all duration-300"
      >
        Cotizar mi volumen ideal
      </a>
    </div>
  </div>
</section>
